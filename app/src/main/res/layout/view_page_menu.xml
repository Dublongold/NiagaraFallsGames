<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/privacy_policy_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menuPlayRoulette"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_selector"
            android:text="@string/play_roulette_button_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menuPlayPokies"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_selector"
            android:text="@string/play_pokies_button_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/menuPrivacyPolicy"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:background="@drawable/button_selector"
            android:text="@string/privacy_policy" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>